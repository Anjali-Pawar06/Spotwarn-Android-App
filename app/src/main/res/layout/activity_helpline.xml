<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== Page Title ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nashik_police_emergency_helplines"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E3A8A"
            android:layout_gravity="center"
            android:padding="8dp" />

        <!-- ===== Police Station 1 ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nashik_police_commissioner_office"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E3A8A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_0253_2317000"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trimbak_naka_nashik"
                    android:textSize="15sp"
                    android:textColor="#374151"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Police Station 2 ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nashik_road_police_station"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E3A8A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_0253_2402200"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nashik_road_nashik"
                    android:textSize="15sp"
                    android:textColor="#374151"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Police Station 3 ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/panchavati_police_station"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E3A8A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_0253_2512900"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/panchavati_nashik"
                    android:textSize="15sp"
                    android:textColor="#374151"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Important Helplines ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/important_helplines"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E40AF"
            android:paddingTop="24dp"
            android:paddingBottom="6dp" />

        <!-- ===== Helpline: Police Control Room ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="#E0F2FE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/police_control_room"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_100"
                    android:textSize="16sp"
                    android:textColor="#1E40AF"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Helpline: Ambulance ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="#E0F2FE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ambulance"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_108"
                    android:textSize="16sp"
                    android:textColor="#1E40AF"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Helpline: Women ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="#E0F2FE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/women_helpline"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1091"
                    android:textSize="16sp"
                    android:textColor="#1E40AF"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Helpline: Child ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="#E0F2FE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/child_helpline"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1098"
                    android:textSize="16sp"
                    android:textColor="#1E40AF"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>